<main class="backgroundImg exchangeImg">
    <div class="content-container">				
        <div class="exchange">
            
            <!-- Exchange Title -->
            <div class="content exchanges-card">
                <h3>Create a new Exchange</h3>
                <input name="title" placeholder="Exchange Name" id="title" type="text" class="card card-input" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                <button type="button" class="btn btn-add">Create</button>
            </div>

            <!-- Exchange Cards -->
            <div class="content exchanges-card d-flex flex-wrap">
                <h3>Hosted Exchanges</h3>						
                
                {{#each exchanges}}
                <div class="content-card d-flex justify-content-center">
                    <a href="/exchange/{{id}}" class="card">{{title}}</a>
                    <button type="button" class="btn btn-del" exchange_id="{{id}}">Delete</button>
                </div>
                {{/each}}

            </div>

            <div class="content exchanges-card d-flex flex-wrap"> 
                <h3>Participating Exchanges</h3>

                {{#each memberOf}}
                <div class="content-card d-flex justify-content-center">
                    <a href="/exchange/test" class="card">{{memberOf.exchange.title}}</a>
                </div>
                {{/each}}

            </div>
        </div>		
    </div>
</main>

<script src="/javascripts/exchange-handlers.js"></script>